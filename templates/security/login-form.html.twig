{% if error is defined and error is not null %}
    <div>{{ error.messageKey|trans(error.messageData, 'security') }}</div>
{% endif %}

<form action="{{ path('login') }}" method="post">
    <div class="form-group">
        <label class="form-control-label required" for="username">Email</label>
        <input type="text" class="form-control" id="username" name="_username" value="{% if error is defined %}{{ last_username }}{% endif %}" />
    </div>
    <div class="form-group">
        <label class="form-control-label required" for="password">Password</label>
        <input type="password" class="form-control" id="password" name="_password" />
    </div>
    {#
        If you want to control the URL the user
        is redirected to on success (more details below)
        <input type="hidden" name="_target_path" value="/account" />
    #}

    <button type="submit" class="btn btn-block btn-outline-warning">Login</button>

    <br />
    <p>
        <small><a href="{{ path('register') }}" class="pull-right text-small">dont have an account yet? register</a></small>
    </p>
</form>